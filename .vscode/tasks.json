{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "command": "npm",
    "tasks": [
        {
            "label": "start dataset server",
            "type": "shell",
            "command": "node",
            "isBackground": true,
            "args": [
                "dataset_server/build/index.js"
            ],
            "problemMatcher": [
                {
                    "pattern": [
                        {
                            "regexp": ".",
                            "file": 1,
                            "location": 2,
                            "message": 3
                        }
                    ],
                    "background": {
                        "activeOnStart": true,
                        "beginsPattern": ".",
                        "endsPattern": ".",
                    }
                }
            ]
        },
        {
            "label": "stop dataset server",
            "type": "shell",
            "command": "echo ${input:terminate}",
            "problemMatcher": []
        },
        {
            "label": "tsc: watch - tsconfig.json",
            "type": "typescript",
            "tsconfig": "dataset_server/tsconfig.json",
            "option": "watch",
            "problemMatcher": [
                "$tsc-watch"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "install",
            "type": "shell",
            "command": "npm",
            "args": [
                "install"
            ]
        },
        {
            "label": "update",
            "type": "shell",
            "command": "npm",
            "args": [
                "update"
            ]
        },
        {
            "label": "test",
            "type": "shell",
            "command": "npm",
            "args": [
                "run",
                "test"
            ]
        },
        {
            "label": "build",
            "type": "shell",
            "group": "build",
            "command": "npm",
            "args": [
                "run",
                "watch"
            ]
        }
    ],
    "inputs": [
        {
            "id": "terminate",
            "type": "command",
            "command": "workbench.action.tasks.terminate",
            "args": "terminateAll"
        }
    ]
}