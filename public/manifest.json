{
  "manifest_version": 3,

  "name": "Q&A Insecure Code Detector",
  "description": "Checks if code snippets on Stack Overflow are save",
  "version": "1.0",

  "options_ui": {
    "page": "options.html"
  },

  "action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },

  "content_scripts": [
      {
          "matches": ["*://*.stackoverflow.com/*", "file:///*/QAInsecureCodeDetection/context_page.html"],
          "js": ["js/vendor.js", "js/content_script.js"]
      }
  ],

  "background": {
    "service_worker": "js/background.js"
  },

  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],

  "host_permissions": [
    "<all_urls>"
  ]
}
